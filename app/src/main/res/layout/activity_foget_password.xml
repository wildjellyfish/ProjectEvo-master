<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.labs.maverick.projectevo.activities.FogetPasswordActivity">





    <TextView
        android:id="@+id/edit_text_forget_password"
        android:layout_width="269dp"
        android:layout_height="87dp"
        android:textSize="18sp"
        android:text="Ingrese su correo electrónico para recuperar contraseña"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_marginTop="216dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        tools:layout_editor_absoluteY="211dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/frame_email_forget_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_forget_password">


        <EditText
            android:id="@+id/input_email_forget_password"
            android:gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email" />


    </android.support.design.widget.TextInputLayout>

    <Button android:id="@+id/btn_send_email"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:text="Enviar"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_email_forget_password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
